<nav class="navigation" aria-label="Primary navigation" data-navbar-animations>
  <button class="navigation__menu">
    {{ "menu" | icon | safe }}
    <span class="sr-only">Navigation menu</span>
  </button>
  <a href="/" class="navigation__logo">
    {% include "ui/logo.njk" %}
  </a>
  <ul class="navigation__list navigation__list--main">
    {% for item in navigation %}
      <li class="navigation__list-item">
        <a href="{{ item.url }}" class="navigation__link">{{item.text}}</a>
      </li>
    {% endfor %}
  </ul>
  <ul class="navigation__list navigation__list--supplementary">
    <li>
      <button class="navigation__link">
        {{ "search" | icon | safe }}
        <span class="sr-only">Search</span>
      </button>
    </li>
    <li>
      <button class="navigation__link">
        {{ "moon" | icon | safe }}
        <span class="sr-only">Select theme</span>
      </button>
    </li>
    <li>
      <button class="navigation__link">
        {{ "rss" | icon | safe }}
        <span class="sr-only">RSS feeds</span>
      </button>
    </li>
  </ul>
</nav>