<article class="card card--article" aria-labelledby="card--{{ post.data.title | slugify }}">
  <div class="card__image">
    <img src="{{ post.data.image.src }}" alt="">
  </div>
  <div class="card__header">
    <h3 class="card__title" id="card--{{ post.data.title | slugify }}"><a class="card__title-link" href="{{ post.url }}">{{ post.data.title | safe }}</a></h3>
    <p class="card__subtitle">{{ post.data.description | safe }}</p>
    <div class="card__metadata">
      <time class="card__pubdate" datetime="{{ post.date | machineReadableDate }}">{{ post.date | humanReadableDate }}</time>
      <span>Read more</span>
    </div>
  </div>
</article>